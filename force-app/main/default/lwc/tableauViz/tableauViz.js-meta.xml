<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>47.0</apiVersion>
    <isExposed>true</isExposed>
      <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
    </targets>
     <!-- Configuring the design attributes -->
      <targetConfigs>
        <targetConfig targets="lightning__RecordPage,lightning__AppPage">
            <property name="vizURL" type="String" label="Enter the Viz URL" required="true" default="--None--" />
            <property name="hideTabs" type="Boolean" default="false" label="Hide Tabs" />
            <property name="hideToolbar" type="Boolean" default="true" label="Hide Toolbar" />
            <property name="filter" type="Boolean" default="false" label="Filter visualization based on the page" />
        </targetConfig>
        <targetConfig targets="lightning__HomePage">
            <property name="vizURL" type="String" label="Enter the Viz URL" required="true" default="--None--" />
            <property name="hideTabs" type="Boolean" default="false" label="Hide Tabs" />
            <property name="hideToolbar" type="Boolean" default="true" label="Hide Toolbar" />
        </targetConfig>
      </targetConfigs>
</LightningComponentBundle>